{
  "app": {
    "name": "category-service"
  },
  "ConnectionStrings": {
    "DefaultConnection": "User ID=postgres;Password=admin@123;Host=locallhost;Port=5432;Database=Category;MINPOOLSIZE=10;MaxPoolSize=1000;Pooling=true;Timeout=100"
  },
  "multi-tenant": {
    "enabled": false
  },
  "VnptSecurityOption": {
    "IsUsingVnptSecurity": true,
    "AuthorityUrl": "http://api-admin.tnmt.vnpt.vn",
    "AuthenticityUrl": "http://sso.tnmt.vnpt.vn",
    "IsExternalSso": false,
    "ModuleCode": "VNPT_INRES_CATEGORY",
    "Audience": "authorize-vilis-api"
  },
  "consul": {
    "enabled": false,
    "url": "http://consul:8500",
    "service": "category-service",
    "address": "category-service",
    "port": "5000",
    "pingEnabled": true,
    "pingEndpoint": "ping",
    "pingInterval": 5,
    "removeAfterInterval": 10,
    "requestRetries": 3
  },
  "rabbitMq": {
    "namespace": "category",
    "retries": 3,
    "retryInterval": 2,
    "username": "guest",
    "password": "guest",
    "virtualHost": "/",
    "port": 5672,
    "hostnames": [
      "rabbit"
    ],
    "requestTimeout": "00:00:10",
    "publishConfirmTimeout": "00:00:01",
    "recoveryInterval": "00:00:10",
    "persistentDeliveryMode": true,
    "autoCloseConnection": true,
    "automaticRecovery": true,
    "topologyRecovery": true,
    "exchange": {
      "durable": true,
      "autoDelete": false,
      "type": "Topic"
    },
    "queue": {
      "autoDelete": false,
      "durable": true,
      "exclusive": false
    }
  },
  "restEase": {
    //"loadBalancer": "consul",
    "services": [
      {
        "name": "app-manager-service",
        "host": "localhost",
        "scheme": "http",
        "port": "5000"
      },
      {
        "name": "signalr-service",
        "host": "signalr-service",
        "scheme": "http",
        "port": "5000"
      },
      {
        "name": "monitoringdata-service",
        "host": "monitoringdata-service",
        "scheme": "http",
        "port": "5000"
      },
      {
        "name": "web-api",
        "host": "10.165.21.34",
        "scheme": "http",
        "port": "5034"
      },
      {
        "name": "doc-manager-service",
        "host": "10.165.21.34",
        "scheme": "http",
        "port": "5017"
      },
      {
        "name": "giaypheptnn-service",
        "host": "10.165.21.34",
        "scheme": "http",
        "port": "5020"
      }
    ]
  },
  "swagger": {
    "enabled": true,
    "reDocEnabled": false,
    "name": "v1",
    "title": "iNRES.Service.Category",
    "version": "v1",
    "routePrefix": "swagger",
    "includeSecurity": true
  },
  "Switch-SSO": {
    "Version": 1,
    "IsEnable": false
  },
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning",
        "VnptiLis.Qtht.ShareLib.RequestResponseModel": "Information"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/logs.txt",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {SourceContext} [{Level}] {Message}{NewLine}{Exception}",
          "formatter": {
            "type": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
          }
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "MicroCategory"
    }
  },
  "metrics": {
    "enabled": false,
    "influxEnabled": false,
    "prometheusEnabled": false,
    "influxUrl": "http://influxdb-service:8086",
    "database": "inres",
    "env": "docker",
    "interval": 5
  },
  "AllowedHosts": "*"
}
